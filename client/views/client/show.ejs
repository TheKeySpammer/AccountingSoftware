<% include ../partials/header %>

<div class="columns">
    <div class="column">
        <a href="/client">
            <div class="level is-pulled-left">
                <div class="level-item has-text-right"><span class="icon"><i class="fas fa-angle-left"></i></span></div>
                <div class="level-item has-text-left">Clients</div>
            </div>
        </a>
    </div>
</div>

<div class="columns is-vcentered">
    <div class="column is-pulled-left">
        <h1 class="is-size-3"><%=client.firstName%> <%=client.lastName%></h1>
    </div>
    <div class="cloumn is-pulled-right">
        <a href="/invoice" class="button is-rounded  is-success is-size-4">
            <span> New Invoice</span>
            <span class="icon is-small">
                <i class="fas fa-file-invoice"></i>
            </span>
        </a>
    </div>
</div>

<hr>

<div class="columns">
    <div class="column is-one-third">
        <div class="card name-card">
            <header class="card-header">
                <p class="card-header-title">
                    <%=client.firstName%> <%=client.lastName%>
                </p>
                <a href="#" class="card-header-icon">
                    <span class="icon">
                        <i class="fas fa-edit" aria-hidden="true"></i>
                    </span>
                </a>
            </header>
            <div class="card-content">
                <div class="content">
                    <div class="columns is-vcentered">
                        <div class="column is-one-fifth has-text-centered">
                            <span class="icon">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </div>
                        <div class="column">
                            <%=client.email%>
                        </div>
                    </div>
                    <div class="columns is-vcentered">
                        <div class="column is-one-fifth has-text-centered">
                            <span class="icon">
                                <i class="fas fa-phone"></i>
                            </span>
                        </div>
                        <div class="column">
                            <%=client.phone%>
                        </div>
                    </div>
                    <div class="columns is-vcentered">
                        <div class="column is-one-fifth has-text-centered">
                            <span class="icon">
                                <i class="fas fa-address-card"></i>
                            </span>
                        </div>
                        <div class="column">
                            <%=client.address1%> <br>
                            <%=client.city%>, <%=client.state%> <br>
                            <%=client.country%>, (<%=client.pincode%>) <br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="column is-two-thirds">
        <div class="card outstanding-revenue-client">
            <header class="card-header">
                <p class="card-header-title">
                    Outstanding Revenue
                </p>
                <p class="card-header-icon has-text-primary">
                    $ 10,000
                </p>
            </header>
            <div class="card-content">
                <div class="content">
                    <div class="columns is-vcentered" id="progress-bar-helper-text">
                        <div class="column">
                            0
                        </div>
                        <div class="column">
                            2k
                        </div>
                        <div class="column">
                            4k
                        </div>
                        <div class="column">
                            6k
                        </div>
                        <div class="column">
                            8k
                        </div>
                        <div class="column">
                            10k
                        </div>
                    </div>
                    <progress class="progress is-primary" value="15" max="100">15%</progress>
                    <hr>
                    <div class="columns is-vcentered">
                        <div class="column has-text-left is-3">
                            <strong>
                                Overdue
                            </strong>
                        </div>
                        <div class="column is-3 has-text-left">
                            $ 100
                        </div>
                    </div>
                    <div class="columns is-vcentered">
                        <div class="column has-text-left is-3">
                            <strong>
                                Unbilled Time
                            </strong>
                        </div>
                        <div class="column is-3 has-text-left">
                            7 days
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <nav class="level">
        <div class="level-left">
            <div class="level-item">
                <p class="subtitle is-3">
                    <strong>Invoices</strong>
                </p>
            </div>
        </div>
        <div class="level-right">
            <div class="level-item">
                <div class="field has-addons">
                    <div class="control">
                        <input type="text" class="search input is-large is-rounded" placeholder="Find Invoice">
                    </div>
                    <div class="control">
                        <a href="#" class="button is-info is-medium is-rounded">Search</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</div>

<div class="table-container">
    <table class="table is-scrollable is-fullwidth is-hoverable is-striped ">
        <thead class="is-size-5">
            <tr>
                <th>
                    <div class="pretty p-svg p-curve">
                        <input type="checkbox" id="selectAll" />
                        <div class="state p-success">
                            <!-- svg path -->
                            <svg class="svg svg-icon" viewBox="0 0 20 20">
                                <path
                                    d="M7.629,14.566c0.125,0.125,0.291,0.188,0.456,0.188c0.164,0,0.329-0.062,0.456-0.188l8.219-8.221c0.252-0.252,0.252-0.659,0-0.911c-0.252-0.252-0.659-0.252-0.911,0l-7.764,7.763L4.152,9.267c-0.252-0.251-0.66-0.251-0.911,0c-0.252,0.252-0.252,0.66,0,0.911L7.629,14.566z"
                                    style="stroke: white;fill:white;"></path>
                            </svg>
                            <label for="">Select All</label>
                        </div>
                    </div>
                </th>
                <th>Client/Invoice Number</th>
                <th>Description</th>
                <th>Issued Date/Due Time</th>
                <th class="num">Amount/Status</th>
            </tr>
        </thead>
        <tbody class="records">
            <tr>
                <th>
                    <div class="pretty p-svg p-curve">
                        <input type="checkbox" id="select-checkbox" />
                        <div class="state p-success">
                            <!-- svg path -->
                            <svg class="svg svg-icon" viewBox="0 0 20 20">
                                <path
                                    d="M7.629,14.566c0.125,0.125,0.291,0.188,0.456,0.188c0.164,0,0.329-0.062,0.456-0.188l8.219-8.221c0.252-0.252,0.252-0.659,0-0.911c-0.252-0.252-0.659-0.252-0.911,0l-7.764,7.763L4.152,9.267c-0.252-0.251-0.66-0.251-0.911,0c-0.252,0.252-0.252,0.66,0,0.911L7.629,14.566z"
                                    style="stroke: white;fill:white;"></path>
                            </svg>
                            <label for=""></label>
                        </div>
                    </div>
                </th>
                <label for="select-checkbox">
                    <td>
                        <p class="heading is-capitalized"><%=client.firstName%> <%=client.lastName%></p>
                        <p class="title is-5">12983127</p>
                    </td>
                    <td>Some description goes here</td>
                    <td>
                        <p class="heading is-capitalized">12/12/2019</p>
                        <p class="title is-5">4 days</p>
                    </td>
                    <td>Rs 20000 INR</td>
                </label>
            </tr>
        </tbody>
        <tfoot class="is-size-6">
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th>Total: Rs 20000 INR</th>
        </tfoot>
    </table>
</div>

<% include ../partials/footer %>