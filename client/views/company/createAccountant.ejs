<% include ../partials/creation_header %>

<h1 class="is-size-2 form-heading"><%= accountant %> Accountant Profile: </h1>
<form action="" method="POST">
    <label class="label">Name: </label>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <p class="control is-expanded">
                    <input type="text" class="input" name="firstName" placeholder="First Name">
                </p>
            </div>
            <div class="field">
                <p class="control is-expanded">
                    <input type="text" class="input" name="lastName" placeholder="Last Name">
                </p>
            </div>

        </div>
    </div>
    <label class="label">Phone: </label>
    <div class="field has-addons">
        <p class="control">
            <span class="select">
                <select name="countryCode" id="countryCode">
                    <% countryCode.forEach((code) => { %>
                        <option value="<%= code %>"><%= code %></option>
                    <% }) %>
                </select>
            </span>
        </p>
        <p class="control">
            <input type="text" class="input" name="phone" maxlength="10">
        </p>
    </div>
    <label class="label">Email: </label>
    <div class="field">
        <input type="email" class="input" name="email" value="<%=email%>" placeholder="email">
    </div>
    <label class="label">Address: </label>
    <div class="field">
        <input type="text" class="input" name="address1" placeholder="Address Line 1">
    </div>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input type="text" class="input" name="city" placeholder="City">
            </div>
            <div class="field">
                <input type="text" class="input" name="state" placeholder="State">
            </div>
        </div>
    </div>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input type="text" class="input" name="city" placeholder="Country">
            </div>
            <div class="field">
                <input type="number" class="input" name="state" placeholder="Pin Code">
            </div>
        </div>
    </div>
    <button type="submit" class="button is-primary is-large">Continue <span><i class="fas fa-arrow-right"></i></span></button>
</form>

<% include ../partials/footer %>