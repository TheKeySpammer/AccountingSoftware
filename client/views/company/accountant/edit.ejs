<% include ../../partials/creation_header %>

<h1 class="is-size-2 form-heading"><%= accountant.accountantType %> Accountant Profile: </h1>
<form action="/company/accountant/edit" method="POST">
    <label class="label">Name: </label>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <p class="control is-expanded">
                    <input required= "required" type="text" class="input" name="firstName" value="<%=accountant.firstName%>" placeholder="First Name">
                </p>
            </div>
            <div class="field">
                <p class="control is-expanded">
                    <input required= "required" type="text" class="input" name="lastName" value="<%=accountant.lastName%>" placeholder="Last Name">
                </p>
            </div>

        </div>
    </div>
    <label class="label">Phone: </label>
    <div class="field has-addons">
        <p class="control">
            <span class="select">
                <select name="countryCode" id="countryCode">
                    <% countryCode.forEach((code) => { %>
                        <% if (code == accountant.countryCode ){ %>
                        <option value="<%= code %>" selected><%= code %></option>
                        <% } else{ %>
                        <option value="<%= code %>"><%= code %></option>
                        <% } %>
                    <% }) %>
                </select>
            </span>
        </p>
        <p class="control">
            <input required= "required" type="text" class="input" name="phone" value = "<%=accountant.phone%>" maxlength="10">
        </p>
    </div>
    <label class="label">Address: </label>
    <div class="field">
        <input required = "required" type="text" class="input" name="address1" value="<%=accountant.address.address1%>" placeholder="Address Line 1">
    </div>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input required = "required" type="text" class="input" name="city" value="<%=accountant.address.city%>" placeholder="City">
            </div>
            <div class="field">
                <input required = "required" type="text" class="input" name="state" value="<%=accountant.address.state%>" placeholder="State">
            </div>
        </div>
    </div>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input required = "required" type="text" class="input" name="country" value="<%=accountant.address.country%>" placeholder="Country">
            </div>
            <div class="field">
                <input required = "required" type="number" class="input" name="pincode" value="<%=accountant.address.pincode%>" placeholder="Pin Code">
            </div>
        </div>
    </div>
    <button type="submit" class="button is-success is-large"> <span> Save </span><span class="icon is-small"><i class="fas fa-check"></i></span></button>
</form>

<% include ../../partials/footer %>