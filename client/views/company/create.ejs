<% include ../partials/creation_header %>

<h1 class="is-size-2 form-heading">Company Profile: </h1>
<form action="/company/create" method="POST">
    <label class="label">Company Name: </label>
    <div class="field">
        <input type="text" class="input" name="name" placeholder="Company Name">
    </div>
    <label class="label">Company Phone: </label>
    <div class="field has-addons">
        <p class="control">
            <span class="select">
                <select name="countryCode" id="countryCode">
                    <% countryCode.forEach((code) => { %>
                    <option value="<%= code %>"><%= code %></option>
                    <% }) %>
                </select>
            </span>
        </p>
        <p class="control">
            <input type="text" class="input" name="phone" maxlength="10">
        </p>
    </div>
    <label class="label">Company Email: </label>
    <div class="field">
        <input type="email" class="input" name="email" placeholder="Company email">
    </div>
    <label class="label">Address: </label>
    <div class="field">
        <input type="text" class="input" name="address1" placeholder="Address Line 1">
    </div>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input type="text" class="input" name="city" placeholder="City">
            </div>
            <div class="field">
                <input type="text" class="input" name="state" placeholder="State">
            </div>
        </div>
    </div>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input type="text" class="input" name="country" placeholder="Country">
            </div>
            <div class="field">
                <input type="number" class="input" name="pincode" placeholder="Pin Code">
            </div>
        </div>
    </div>
    <div class="columns">
        <div class="column">
            <label class="label">Currency: </label>
            <div class="field">
                <div class="control">
                    <div class="select">
                        <select name="currency" id="currency">
                            <% currency.forEach(curr => { %>
                            <option value="<%= curr %>"><%= curr %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="column">
            <label class="label">Date Format: </label>
            <div class="field">
                <div class="control">
                    <div class="select">
                        <select name="datefmt" id="datefmt">
                            <% dateFormat.forEach(fmt => { %>
                            <option value="<%= fmt %>"><%= fmt %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="column">
            <label class="label">Tax Rate: </label>
            <div class="field">
                <input type="number" class="input" placeholder="rate" name="taxrate">
            </div>
        </div>
    </div>
    <div class="columns">
        <div class="column">
            <label class="label">Team: </label>
            <div class="pretty is-block p-smooth p-curve p-svg">
                <input type="checkbox" name="headAcc" checked disabled>
                <div class="state p-success">
                    <svg class="svg svg-icon" viewBox="0 0 20 20">
                        <path
                            d="M7.629,14.566c0.125,0.125,0.291,0.188,0.456,0.188c0.164,0,0.329-0.062,0.456-0.188l8.219-8.221c0.252-0.252,0.252-0.659,0-0.911c-0.252-0.252-0.659-0.252-0.911,0l-7.764,7.763L4.152,9.267c-0.252-0.251-0.66-0.251-0.911,0c-0.252,0.252-0.252,0.66,0,0.911L7.629,14.566z"
                            style="stroke: white;fill:white;"></path>
                    </svg>
                    <label>Head Accountant</label>
                </div>
            </div>
            <div class="pretty is-block p-smooth p-curve p-svg">
                <input type="checkbox" name="clientAcc">
                <div class="state p-success">
                    <svg class="svg svg-icon" viewBox="0 0 20 20">
                        <path
                            d="M7.629,14.566c0.125,0.125,0.291,0.188,0.456,0.188c0.164,0,0.329-0.062,0.456-0.188l8.219-8.221c0.252-0.252,0.252-0.659,0-0.911c-0.252-0.252-0.659-0.252-0.911,0l-7.764,7.763L4.152,9.267c-0.252-0.251-0.66-0.251-0.911,0c-0.252,0.252-0.252,0.66,0,0.911L7.629,14.566z"
                            style="stroke: white;fill:white;"></path>
                    </svg>
                    <label>Client Accountant</label>
                </div>
            </div>
            <div class="pretty is-block p-smooth p-curve p-svg">
                <input type="checkbox" name="expenseAcc">
                <div class="state p-success">
                    <svg class="svg svg-icon" viewBox="0 0 20 20">
                        <path
                            d="M7.629,14.566c0.125,0.125,0.291,0.188,0.456,0.188c0.164,0,0.329-0.062,0.456-0.188l8.219-8.221c0.252-0.252,0.252-0.659,0-0.911c-0.252-0.252-0.659-0.252-0.911,0l-7.764,7.763L4.152,9.267c-0.252-0.251-0.66-0.251-0.911,0c-0.252,0.252-0.252,0.66,0,0.911L7.629,14.566z"
                            style="stroke: white;fill:white;"></path>
                    </svg>
                    <label>Expense Accountant</label>
                </div>
            </div>
            <div class="pretty is-block p-smooth p-curve p-svg">
                <input type="checkbox" name="generalAcc">
                <div class="state p-success">
                    <svg class="svg svg-icon" viewBox="0 0 20 20">
                        <path
                            d="M7.629,14.566c0.125,0.125,0.291,0.188,0.456,0.188c0.164,0,0.329-0.062,0.456-0.188l8.219-8.221c0.252-0.252,0.252-0.659,0-0.911c-0.252-0.252-0.659-0.252-0.911,0l-7.764,7.763L4.152,9.267c-0.252-0.251-0.66-0.251-0.911,0c-0.252,0.252-0.252,0.66,0,0.911L7.629,14.566z"
                            style="stroke: white;fill:white;"></path>
                    </svg>
                    <label>General Accountant</label>
                </div>
            </div>
        </div>
        <div class="column has-text-right">
            <button type="submit" class="button is-primary is-size-3"> <span> Continue </span><span class="icon is-small"><i class="fas fa-arrow-right"></i></span></button>
        </div>
    </div>

</form>

<% include ../partials/footer %>