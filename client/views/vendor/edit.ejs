<% include ../partials/header %>

<h1 class="is-size-2 form-heading">Edit Vendor: </h1>
<form action="" method="post">
    <label class="label">Name: </label>
    <div class="field">
        <input required = "required" type="text" class="input" name="name" value="<%=vendor.name%>" placeholder="Name">
    </div>
    <label class="label">Phone: </label>
    <div class="field has-addons">
        <p class="control">
            <span class="select">
                <select name="countryCode" id="countryCode">
                    <% countryCode.forEach((code) => { %>
                        <% if (code == vendor.countryCode) { %>
                            <option value="<%= code %>" selected><%= code %></option>
                        <% }else{ %>
                            <option value="<%= code %>"><%= code %></option>
                        <% } %>
                    <% }) %>
                </select>
            </span>
        </p>
        <p class="control">
            <input required = "required" type="text" class="input" name="phone" value="<%=vendor.phone%>" maxlength="10">
        </p>
    </div>
    <label class="label">Email: </label>
    <div class="field">
        <input required = "required" type="email" class="input" name="email" value="<%=vendor.email%>" placeholder="email">
    </div>
    <label class="label">Address: </label>
    <div class="field">
        <input required = "required" type="text" class="input" name="address1" value="<%=vendor.address1%>" placeholder="Address Line 1">
    </div>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input required = "required" type="text" class="input" name="city" value="<%=vendor.city%>" placeholder="City">
            </div>
            <div class="field">
                <input required = "required" type="text" class="input" name="state" value="<%=vendor.state%>" placeholder="State">
            </div>
        </div>
    </div>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input required = "required" type="text" class="input" name="country" value="<%=vendor.country%>" placeholder="Country">
            </div>
            <div class="field">
                <input required = "required" type="number" class="input" name="pincode" value="<%=vendor.pincode%>" placeholder="Pin Code">
            </div>
        </div>
    </div>
    

    <div class="columns is-vcentered form-submit-buttons">
        <div class="column is-1">
            <button type="submit" class="button is-success is-large"> <span> Save </span><span class="icon is-small"><i class="fas fa-check"></i></span></button>
        </div>
        <div class="column is-1">
            <a class="button is-large is-danger" href="/expense"> <span> Cancle </span><span class="icon is-small"><i class="fas fa-times"></i></span></a>
        </div>
    </div>
</form>

<% include ../partials/footer %>