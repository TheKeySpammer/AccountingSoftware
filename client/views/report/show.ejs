                  <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <th class = "is-size-6"><b>Total Paid:</b></th>
                    <td><span class = "is-pulled-right"><%= currency.substring(0,1) + ' ' + invoice.amountPaid%></span></td>
                  </tr>

                  <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <th class = "is-size-6"><b>Amount Due:</b></th>
                    <td><span class = "is-pulled-right"><%= currency.substring(0,1) + ' ' + invoice.balanceDue%></span></td>
