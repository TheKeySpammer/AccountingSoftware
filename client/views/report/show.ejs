                <th class = "report-header has-text-white">Summary</th>
              </thead>
              <tbody class = "report-body">
                <tr>
                  <th>Total Units</th>
                  <td><span class = "is-pulled-right">1</span></td>
                </tr>
                <tr>
                  <th>Total Sales Amount</th>
                  <td><span class = "is-pulled-right">$250000.00</span></td>
                </tr>
              </tbody>
              <thead>
                <th class="report-header has-text-white"><%= pseudoItem.itemType %></th>
              </thead>
              <thead>
                <tr>
                  <th>Client Name</th>
                  <th>InvoiceID</th>
                  <th>Invoice Date</th>
                  <th>Per Unit Cost</th>
                  <th>Quantity</th>
                  <th>Discount</th>
                  <th>Total</th>
                </tr>
              </thead>
