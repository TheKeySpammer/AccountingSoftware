                  <td><span class ="is-pulled-right"><%= currency.substring(0,1) + ' ' + totalInvoiced%></span></td>
                </tr>

                <tr>
                  <td>Total Paid</td>
                  <td><span class ="is-pulled-right"><%= currency.substring(0,1) + ' ' + totalPaid%></span></td>
                </tr>
              </tbody>
              <tfoot>
                <tr>
                  <th>Amount Due</th>
                  <td ><span class ="is-pulled-right"><%= currency.substring(0,1) + ' ' + totalDue%></span></td>
                </tr>
              </tfoot>
              <% invoice.forEach((invoice) =>{ %>

