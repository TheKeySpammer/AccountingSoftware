                  <th class = "report-header has-text-white"><%= invoice.client.firstName + ' ' + invoice.client.lastName%></th>
                </thead>
                <thead>
                  <th>Summary</th>
                </thead>
                <tbody class = "report-body">
                  <tr>
                    <td>Total Invoiced</td>
                    <td ><span class ="is-pulled-right"><%= currency.substring(0,1) + ' ' + invoice.total%></span></td>
                  </tr>

                  <tr>
                    <td>Total Paid</td>
                    <td ><span class ="is-pulled-right"> <%= currency.substring(0,1) + ' ' + invoice.amountPaid%></span></td>
                  </tr>
                </tbody>
                <tfoot>
                  <tr>
                    <th>Amount Due</th>
                    <td ><span class ="is-pulled-right"> <%= currency.substring(0,1) + ' ' + invoice.balanceDue%></span></td>
                  </tr>
